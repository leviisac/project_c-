<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        xmlns:BE="clr-namespace:BE;assembly=BE" x:Class="PLWPF.Get_Tests"
        mc:Ignorable="d"
        Title="Get_Tests" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Key="testViewSource" d:DesignSource="{d:DesignInstance {x:Type BE:Test}, CreateList=True}"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource testViewSource}">
        <Grid.RowDefinitions>
            
            <RowDefinition Height="341*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>

        <DataGrid  x:Name="data" Loaded="Data_Loaded" IsReadOnly="True"  Grid.Row="0"/>
        
        <Button Content="EXIT" Click="Exit_Click" HorizontalAlignment="Left" Margin="685,5.2,0,0" Grid.Row="2" VerticalAlignment="Top" Width="99" Height="34"/>
    </Grid>
</Window>
