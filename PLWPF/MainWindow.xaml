<Window x:Class="PLWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
       
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Content="TRAINEE"  Margin="10" Grid.Row="0" FontSize="35" FontStyle="Italic" Background="LightSalmon" Foreground="Blue" Click="Button_Click"/>
        <Button Content="TESTER"  Margin="10" Grid.Row="1" FontSize="35" FontStyle="Italic" Background="BlueViolet" Foreground="LemonChiffon"/>
        <Button Content="TEST" Margin="10" Grid.Row="2" FontSize="35" Click="Button_Click" FontStyle="Italic" Background="Red" Foreground="Black"/>
       
    </Grid>
</Window>
