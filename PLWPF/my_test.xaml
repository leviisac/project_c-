<Window x:Class="PLWPF.my_test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        xmlns:BE="clr-namespace:BE;assembly=BE"
        mc:Ignorable="d"
        Title="my_test" Height="450" Width="800">
    <Window.Resources>
        <CollectionViewSource x:Key="testViewSource" d:DesignSource="{d:DesignInstance {x:Type BE:Test}, CreateList=True}"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource testViewSource}">
        <Grid.RowDefinitions>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="341*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>
        <RadioButton Content="order by names" FontSize="20"  HorizontalAlignment="Left" VerticalAlignment="Top" Height="39" Width="161"/>
        <DataGrid Loaded="Data_Loaded" x:Name="data" IsReadOnly="True"  Grid.Row="1"/>

        <Button Content="EXIT" Click="Exit_Click" HorizontalAlignment="Left" Margin="685,5.2,0,0" Grid.Row="2" VerticalAlignment="Top" Width="99" Height="34" />
    </Grid>
</Window>

