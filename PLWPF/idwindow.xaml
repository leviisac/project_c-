<Window x:Class="PLWPF.idwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="idwindow" Height="200" Width="500">
    <Grid Margin="0,0,-0.4,-6.6">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="213*"/>
            <ColumnDefinition Width="581*"/>
        </Grid.ColumnDefinitions>
        <Label Content="NAME:" FontSize="35" />
        <Label Content="ID:"  Grid.Row="1" FontSize="35" />
        <TextBox Grid.Column="1"  Height="50" Margin="10" x:Name="name"/>
        <TextBox Grid.Column="1" Margin="10" Grid.Row="1" Height="50" x:Name="id" />
        <Button Grid.Row="2" Grid.Column="1" Content="LOGIN" Click="Button_Click" Margin="57.2,5.6,115.4,13.8" FontSize="20"/>

    </Grid>
</Window>
