<Window x:Class="PLWPF.Traineewindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="Traineewindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Content="ADD"  Margin="10" Grid.Row="0" FontSize="35"/>
        <Button Content="DELETE"  Margin="10" Grid.Row="1" FontSize="35" />
        <Button Content="UPDATE" Margin="10" Grid.Row="1" Grid.Column="1" FontSize="35" />
        <Button Content="GET" Grid.Column="1"  Margin="10" FontSize="35"/>

    </Grid>
</Window>
