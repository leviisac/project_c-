        <Image Source="imagens/perfil.jpg" Height="100"  VerticalAlignment="center" Grid.ColumnSpan="13" Margin="-10,10.2,9.6,36.2" Grid.Row="3" Grid.RowSpan="3"/>

        <Label Content="Name:" Grid.Column="1" Grid.Row="1" FontSize="20" FontStyle="Oblique" Grid.ColumnSpan="2" Margin="7.6,0.8,140.8,40.8" Grid.RowSpan="2" />
        <TextBox x:Name="name_tester" Grid.Column="2"  Margin="3.8,5.8,4.8,2"  Grid.Row="1" FontSize="30" Text="{Binding tester_name, Mode=TwoWay ,NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <Label Content="Last Name:" Grid.Column="1" Grid.Row="2" FontSize="20" FontStyle="Oblique" Grid.ColumnSpan="2" Margin="7.6,0,140.8,12.8" />
        <TextBox x:Name="lname_tester" Grid.Column="2"  Margin="3.8,5,4.8,3.8"  Grid.Row="2" FontSize="30" Text="{Binding tester_lname, Mode=TwoWay ,NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <Label Content=" id:" Grid.Column="1" Grid.Row="3" FontSize="20" FontStyle="Oblique" Grid.ColumnSpan="2" Margin="7.6,1.2,140.8,13.6" />
        <TextBox x:Name="id_tester" Grid.Column="2"  Margin="3.8,6.2,4.8,2.6"  Grid.Row="3" FontSize="30" Text="{Binding testerid, Mode=TwoWay ,NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <Label Content="tel:" Grid.Column="1" Grid.Row="4" FontSize="20" FontStyle="Oblique" Grid.ColumnSpan="2" Margin="7.6,48.4,140.8,0" Grid.RowSpan="3" />
        <TextBox x:Name="tel_tester" Grid.Column="2"  Grid.Row="5" Margin="6.8,6.6,5.8,6.2" FontSize="30" Text="{Binding tel_num, Mode=TwoWay ,NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <Label Content="experience:" Grid.Row="6" FontSize="20" FontStyle="Oblique" Grid.ColumnSpan="2" Margin="0.6,6.8,158.8,12.6" Grid.RowSpan="3" Grid.Column="1" />
        <TextBox x:Name="experience_tester" Grid.Column="2"    Grid.Row="6" Margin="7.8,6.8,5.8,7" FontSize="30" Text="{Binding experience, Mode=TwoWay ,NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <Label Content="Birthday:" Grid.Column="1" Grid.Row="7" FontSize="20" FontStyle="Oblique" Margin="0.6,1,0.2,30.6" Grid.RowSpan="2"/>
        <DatePicker  x:Name="birthday_tester" Margin="5.8,6,5.8,5.8" Grid.Column="2"  Grid.Row="7" FontSize="15" Text="{Binding testerbirthday, Mode=TwoWay ,NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <Label Content="Car type:" Grid.Row="9" FontSize="20" FontStyle="Oblique" Margin="0.6,48.4,0.2,0" Grid.RowSpan="2" Grid.Column="1" />
        <ComboBox x:Name="ctype_tester" Grid.Column="2"   Grid.Row="10"  Margin="10.8,10.6,9.8,9" Text="{Binding tester_ctype, Mode=TwoWay ,NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <Label Content="Transmission:" Grid.Row="9" FontSize="20" FontStyle="Oblique" Margin="0.6,0.4,0.2,0.4" Grid.Column="1" />
        <ComboBox  x:Name="transmission_tester" Grid.Column="2"   Grid.Row="9" Margin="10.8,10.4,9.8,9.4" Text="{Binding tester_transtype, Mode=TwoWay ,NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>

        <Label Content="Gender:" Grid.Row="8" FontSize="20" FontStyle="Oblique" Margin="0.6,0.2,0.2,48.4" Grid.RowSpan="2" Grid.Column="1" />
        <ComboBox x:Name="gender_tester" Grid.Column="2"   Grid.Row="8" Margin="10.8,10.2,9.8,9.6" Text="{Binding tester_gender, Mode=TwoWay ,NotifyOnValidationError=True, ValidatesOnExceptions=True}"/>


